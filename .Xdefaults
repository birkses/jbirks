urxvt.font: xft:DejaVu Sans Mono-9:book:autohint=true:hinting=true
urxvt.boldFont: xft:DejaVu Sans Mono-9:book:autohint=true:hinting=true
URxvt*geometry:         53x20
URxvt*borderless:       1
URxvt*scrollBar:        false
URxvt*saveLines:        30000
URxvt*termName:         rxvt-unicode

urxvt*dynamicColors:    on
urxvt.background:       black
urxvt.foreground:       #F2F2F2
urxvt.scrollBar:        false
urxvt.tintColor:        white
urxvt.fading:           15
urxvt.depth:            32
urxvt.fadeColor:        black
urxvt.shading:          15
urxvt.inheritPixmap:    true
urxvt.pointerColor:     black
urxvt.pointerColor2:    white

!urxvt font settings
URxvt.letterSpace: -2
URxvt*cursorColor:  #FFFFFF

